<Window x:Class="DrumMashine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrumMashine"
        mc:Ignorable="d"
        Title="DrumMashine" Height="360" Width="340">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Resources/Pictures/background.jpg" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button  HorizontalAlignment="Center" Height="25" Margin="10,0,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand" Grid.Row="0">
            <StackPanel>
                <Image Source="Resources/Pictures/play.png" />
            </StackPanel>
        </Button>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand">
                    <StackPanel>
                        <Image Source="Resources/Pictures/kick.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand">
                    <StackPanel>
                        <Image Source="Resources/Pictures/snare.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand">
                    <StackPanel>
                        <Image Source="Resources/Pictures/open hat.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand">
                    <StackPanel>
                        <Image Source="Resources/Pictures/close hat.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand" Grid.Row="5">
                    <StackPanel>
                        <Image Source="Resources/Pictures/clash.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand" Grid.Row="6">
                    <StackPanel>
                        <Image Source="Resources/Pictures/tom.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand" Grid.Row="7">
                    <StackPanel>
                        <Image Source="Resources/Pictures/note1.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand" Grid.Row="8">
                    <StackPanel>
                        <Image Source="Resources/Pictures/note2.png" />
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Height="25" Margin="10,5,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand" Grid.Row="9">
                    <StackPanel>
                        <Image Source="Resources/Pictures/note3.png" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <ListBox Name="lbTick1" HorizontalAlignment="Left" Background="Transparent" Height="auto" Margin="0,0,0,0" Padding="0,0,0,0" BorderThickness="0" VerticalAlignment="Top" Width="auto" 
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Column="1"  ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Tag="{Binding Path=Tag}" HorizontalAlignment="Left" Height="25" Margin="0,1,0,0" VerticalAlignment="Center" Width="25" Style="{StaticResource ClearButton}" Cursor="Hand">
                            <StackPanel>
                                <Image Source="Resources/Pictures/target.png" />
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>
        </Grid>

    </Grid>
</Window>
